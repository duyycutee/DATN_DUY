<script>
    $(document).ready(function () {
        $("#DoiMK").click(function () {
            DoiMatKhau();
        });
        $("#themks").click(function () {
            ThemKS();
        });
    });

    function DoiMatKhau() {
        $.ajax({
            type: "GET",
            url: "/KhachHang/DoiMK",
            success: function (result) {
                $('#container').html(result);
            },
            error: function (error) {
                console.error("Error:", error);
            }
        });
    }
    function ThemKS() {
        $.ajax({
            type: "GET",
            url: "/DoanhNghiep/ThemKS",
            success: function (result) {
                $('#container').html(result);
            },
            error: function (error) {
                console.error("Error:", error);
            }
        });
    }
</script>
