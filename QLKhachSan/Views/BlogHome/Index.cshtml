@model IEnumerable<QLKhachSan.ViewModels.BlogVM>
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutBlog";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="blog-list-item col-12">
            <a class="blog-post-wrap" href="#">
                <article class="blog-post card">
                    <div class="blog-post__head mb-3">
                        <h2 class="blog-post__title mb-3">
                            @item.TieuDe
                        </h2>
                        <ul class="blog-post__meta">
                            <li class="date">
                                <i class="icon icon-calendar"></i>
                                <time datetime="2017-01-18">@item.NgayDang</time>
                            </li>
                        </ul>
                    </div>
                    <figure class="blog-post__cover mb-3 border-bottom"><span class="d-block img-wrap"><img class="img-cover" src="@Url.Content("~/img/Images/blog/"+@item.Anh)" alt="Features holiday on the French Riviera" /></span></figure>
                    <p>@item.ThongTin</p>

                </article>
            </a>
        </div>
    }
</div>
